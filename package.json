{
  "name": "ml-lit-components",
  "private": false,
  "version": "0.0.21",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "require": "./dist/index.js"
    },
    "./react": {
      "require": "./dist/react/index.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build:lit": "tsc && vite build --mode lit",
    "build:react": "tsc && vite build --mode react",
    "build:all": "tsc && vite build --mode react && vite build --mode lit",
    "compile": "tsc",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "lit": "^3.1.2",
    "ml-lit-components": "^0.0.20",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.5.0",
    "@lit/react": "^1.0.5",
    "@storybook/addon-essentials": "^8.1.6",
    "@storybook/addon-links": "^8.1.6",
    "@storybook/blocks": "^8.1.6",
    "@storybook/react": "^8.1.6",
    "@storybook/react-vite": "^8.1.6",
    "@storybook/test": "^8.1.6",
    "@storybook/web-components": "^8.1.6",
    "@storybook/web-components-vite": "^8.1.6",
    "@vitejs/plugin-react": "^4.3.0",
    "sass": "^1.77.4",
    "storybook": "^8.1.6",
    "storybook-dark-mode": "^4.0.2",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  }
}
